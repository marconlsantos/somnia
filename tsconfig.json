{
  "compilerOptions": {
    "target": "ES6",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    //"traceResolution": true,
    "resolveJsonModule": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "jsx": "preserve",
    "jsxImportSource": "solid-js"
  },
  "include": [
    "src/**/*"
  ]
}